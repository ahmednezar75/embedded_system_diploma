#include "stdio.h"
#include "string.h"
void reverse(char arr1[], int len) {
	int k;
	char a[100];
	for (int i =0; i < len-1; i++)
	{
		if (arr1[i]=='')
		{
			for (int i=0;i<k-1;i++)
			{
				printf("%c",a[i]);
			}
			printf("");

		}
		else
			a[k]=a[i];
		k++;

	}

}

int main()
{
	char arr1[100];
	int y;
	printf("enter the name:");
	fflush(stdin);fflush(stdout);
	gets(arr1);
	y=strlen(arr1);
	reverse(arr1,y);
}
