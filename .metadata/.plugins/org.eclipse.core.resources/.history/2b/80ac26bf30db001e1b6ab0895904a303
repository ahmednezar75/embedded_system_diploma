#include "stdio.h"

int power(int x,int y)
{
	if (y!=0)
	{
	return x*power(x,y-1);
	}
	else
	{
		return 1;
	}
}
int main()
{
	int base,power;
	printf("enter a base number:");
	fflush(stdin);fflush(stdout);
	scanf("%d",&base);
	printf("enter a power number:");
	fflush(stdin);fflush(stdout);
	scanf("%d",&power);
	printf("%d ^ %d = %d",base,power,power(base,power));


}


