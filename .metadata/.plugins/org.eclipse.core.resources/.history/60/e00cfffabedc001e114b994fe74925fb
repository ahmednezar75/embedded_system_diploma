#include "stdio.h"
int main()
{
	int x;int fact=x;
printf("enter an integer:")	;
fflush(stdin);fflush(stdout);
scanf("%d",&x);
if (x<0)
{
	printf("Error!! factorial of negative doesn't exist");
	}
else if(x==1 || x==0)
{
	printf("factorial=1");

	}
else
{
	for(int i=1;i<x;i++)
	{
		fact*=fact-i;
	}
	printf("factorial=%d",fact);
	}
}


