#include "stdio.h"
#include "string.h"
char arr1[100];
char arr2[100];
char temp[100];
int main()
{
	int size1;
	int size2;
	printf("enter the size of the first array:");
	fflush(stdin);fflush(stdout);
	scanf("%d",&size1);
	printf("enter the elements of the  first array:");
	fflush(stdin);fflush(stdout);
	for(int i=0;i<size1;i++)
	{
		scanf("%d",&arr1[i]);
	}
	printf("The elements of first are: ");
	fflush(stdin);fflush(stdout);
	for (int i = 0; i < size1; i++)
	{
		printf("%d ", arr1[i]);
	}
	printf("\n");
	printf("enter the size of the second array:");
		fflush(stdin);fflush(stdout);
		scanf("%d",&size2);
		printf("enter the elements of the second array:");
		fflush(stdin);fflush(stdout);
		for(int i=0;i<size2;i++)
		{
			scanf("%d",&arr2[i]);
		}
		printf("The elements of second are: ");
		fflush(stdin);fflush(stdout);
		for (int i = 0; i < size2; i++)
		{
			printf("%d ", arr2[i]);
		}
		printf("\n");
for (int i=0;i<size2;i++)
{
	temp[i]=arr1[i];

}
for (int i=0;i<size2;i++)
{
	arr1[i]=arr2[i];

}
for (int i=0;i<size2;i++)
{
	arr2[i]=temp[i];

}
printf("The elements of first are after reverse: ");
	fflush(stdin);fflush(stdout);
	for (int i = 0; i < size1; i++)
	{
		printf("%d ", arr1[i]);
	}
	printf("\n");
	printf("The elements of second are after reverse: ");
		fflush(stdin);fflush(stdout);
		for (int i = 0; i < size2; i++)
		{
			printf("%d ", arr2[i]);
		}

}
