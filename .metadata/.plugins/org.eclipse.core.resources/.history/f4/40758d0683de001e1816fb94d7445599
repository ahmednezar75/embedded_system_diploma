void reverse(char arr1[], int len) {
    char word[100]; // Array to store a word
    int wordLength = 0; // Length of the current word

    // Iterate through the string
    for (int i = 0; i < len; i++) {
        if (arr1[i] == ' ' || arr1[i] == '\0') { // Check for space or end of string
            // Print the word in reverse order
            for (int j = wordLength - 1; j >= 0; j--) {
                printf("%c", word[j]);
            }
            printf(" "); // Print space after each word
            wordLength = 0; // Reset word length for the next word
        } else {
            word[wordLength++] = arr1[i]; // Store characters in the word array
        }
    }
}

int main() {
    char arr1[100];
    printf("Enter the name: ");
    fflush(stdin);fflush(stdout); // Clear input buffer before input
    gets(arr1); // Read the string
    int len = strlen(arr1);
    reverse(arr1, len);
    return 0;
