#include "stdio.h"
int arr[32];
int ones(int x)
{
	int i=0;int count=0;
	while(x!=0)
	{
		arr[i]=x%2;
		x/=2;
		i++;
	}
	printf("the binary rep is:");

	for (int j = i - 1; j >= 0; j--) {
	        printf("%d", arr[j]);
	    }
	printf("\n");
	for (int j = i - 1; j >= 0; j--)
	{
		if(arr[j]==1)
		{
			count++;
		}
	}
	return count;
}
int main()
{
	int n;
	printf("enter the number:");
	fflush(stdin);fflush(stdout);
	scanf("%d",&n);
    printf("the number of ones is:%d",ones(n));
}

