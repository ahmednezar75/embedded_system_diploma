#include "stdio.h"

void reverse(int arr[],int l)
{
	printf("the reversed array is:");
int z[100];
	for(int i=0;i<l;i++)
	{
		z[l-1-i]=arr[i];
		printf("%d\t",z[l-1-i]);
	}

	}


int main()
{
	int len;
	int arr[100];
	printf("enter the length of the array:");
	fflush(stdin);fflush(stdout);
	scanf("%d",&len);
	printf("enter the elements of the array:");
	fflush(stdin);fflush(stdout);
	for(int i=0;i<len;i++)
	{
		scanf("%d",&arr[i]);
	}
	reverse(arr,len);


}
