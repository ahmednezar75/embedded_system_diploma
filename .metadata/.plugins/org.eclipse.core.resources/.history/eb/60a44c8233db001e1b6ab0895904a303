#include <stdio.h>

void reverse() {
    char c;
    scanf("%c", &c);

    if (c != '\0') {
        reverse();
        printf("%c", c);
    }
}

int main() {
    printf("Enter a sentence: ");
    reverse(); // Call the function to reverse the sentence
    return 0;
}



