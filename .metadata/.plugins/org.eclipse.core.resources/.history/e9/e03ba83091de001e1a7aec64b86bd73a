#include <stdio.h>
int sum_of_Digits(int n)
{
	int sum = 0;
	while (n != 0) {
		sum += n % 10;
		n /= 10;
	}
	return sum;
}

int main() {
	int n;
	printf("Enter a number: ");
	fflush(stdin);fflush(stdout);
	scanf("%d", &n);
	printf("the sum=: %d\n", sum_of_Digits(n));
}
