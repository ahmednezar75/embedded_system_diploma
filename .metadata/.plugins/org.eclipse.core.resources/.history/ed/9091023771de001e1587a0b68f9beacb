#include "stdio.h"
int arr[32];
int ones(int x)
{
	int i=0;
	while(x!=0)
	{
		arr[i]=x%10;
		x/=10;
		i++;
	}
	printf("the binary rep is:\n");
	for (int j = i - 1; j >= 0; j--) {
	        printf("%d", arr[j]);
	    }
}
int main()
{
	int n;
	printf("enter the number:");
	fflush(stdin);fflush(stdout);
	scanf("%d",&n);
    ones(n);
}
