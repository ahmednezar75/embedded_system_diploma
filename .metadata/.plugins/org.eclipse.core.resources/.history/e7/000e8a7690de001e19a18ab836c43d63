#include <stdio.h>

int sumDigits(int number) {
	int sum = 0;

	// Iterate until the number becomes 0
	while (number != 0) {
		// Extract the last digit and add it to the sum
		sum += number % 10;
		// Remove the last digit from the number
		number /= 10;
	}

	return sum;
}
